
<div class="tab-content">
    <div class="tab-pane fade show active" id="home-tab-pane" role="tabpanel" aria-labelledby="home-tab" tabindex="0">
        <div class="table-box">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                      <th><h5>IMAGE</h5></th>
                      <th><h5>NAME</h5></th>
                      <th><h5>CATEGORY</h5></th>
                      <th><h5>GLASS</h5></th>
                    </tr>
                </thead>
                <tbody>
                    <% @cocktails["drinks"].each do |cocktail| %>
                    <tr>
                        <td><img src=<%= cocktail["strDrinkThumb"]%> class="tbl-img"></td>
                        <td><%= link_to cocktail["strDrink"], cocktail_detail_path(cocktail["idDrink"]) %></td>
                        <td><%= cocktail["strCategory"]%></td>
                        <td><%= cocktail["strGlass"]%></td>
                    </tr>
                    <%end%>
                </tbody>
            </table> 
        </div>
    </div>
</div>
